function [] = bound()
% Purpose: Specify boundary conditions for a calculation

% constants
global NPI NPJ  NT  NV NALPHA
% variables
global u v T y_v F_u Alpha solve_fi 

for I = 1:NPJ
    
end

u(NPI+2,:) = u(NPI+1,:);
v(NPI+2,:) = v(NPI+1,:);
Alpha(NPI+2,:) = Alpha(NPI+1,:);

m_in = 0;
m_out = 0;
for J = 2:NPJ+1
    j = J;
    AREAw = y_v(j+1) - y_v(j); 
    m_in = m_in + F_u(2,J)*AREAw;
    m_out = m_out + F_u(NPI+1,J)*AREAw;
end
    u(NPI+2,2:NPJ+1) = u(NPI+1,2:NPJ+1)*m_in/m_out;

end
